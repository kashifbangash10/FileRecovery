    <ImageView
        android:id="@+id/onbordoneimg"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_25ssp"
        android:layout_height="@dimen/_332sdp"
        android:src="@drawable/onboardimg3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@id/onbordoneimg"
        app:layout_constraintEnd_toEndOf="@id/onbordoneimg"
        app:layout_constraintStart_toStartOf="@id/onbordoneimg"
        app:layout_constraintTop_toTopOf="@id/onbordoneimg"
