    <TextView
        android:id="@+id/onbordtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="   Recover all deleted\nphoto and video"
        android:textColor="@color/titletextcolor"
        android:textFontWeight="600"
        android:textSize="@dimen/_17ssp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onbordoneimg" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:text="Explore verified job sites registered by trusted \n contractors in your area. Stay informed and connect with "
        app:layout_constraintTop_toBottomOf="@id/onbordtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_10sdp"
        android:textFontWeight="400"
        android:textStyle="normal"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_35sdp"/>


